@model List<Genre>

<div class="container mt-4">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2 class="text-primary fw-bold">Genre List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Genre" asp-action="Create" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle"></i> Add Genre
            </a>
        </div>
    </div>

    <div class="card shadow-lg">
        <div class="card-body p-4">
            <table class="table table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Genre Name</th>
                        <th>Display Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Genre" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Genre" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger btn-sm ms-2">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


