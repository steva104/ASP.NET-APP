@model List<Product>

<div class="container mt-4">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2 class="text-primary fw-bold">Product List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        </div>
    </div>

    <div class="card shadow-lg">
        <div class="card-body p-4">
            <table id="tblProduct" class="table table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">Album Title</th>
                        <th class="text-center">Artist</th>
                        <th class="text-center">Year</th>
                        <th class="text-center">UPC</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Genre</th>
                        <th></th>
                    </tr>
                </thead>             
            </table>
        </div>
    </div>

</div>


@section Scripts{
    <script src="~/js/product.js"></script>
}

