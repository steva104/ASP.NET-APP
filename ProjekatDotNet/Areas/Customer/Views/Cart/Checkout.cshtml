@model ShoppingCartViewModel

<form method="post" id="checkoutForm">
    <div class="container py-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-dark text-white text-center py-3">
                <h4 class="mb-0">Checkout</h4>
            </div>
            <div class="card-body px-4">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary">Shipping Information</h5>
                        <p class="text-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            All fields are required to proceed with the order.
                        </p>
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input asp-for="OrderHeader.Name" type="text" class="form-control" required>
                            <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input asp-for="OrderHeader.PhoneNumber" type="text" class="form-control" required>
                            <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Street Address</label>
                            <input asp-for="OrderHeader.StreetAddress" type="text" class="form-control" required>
                            <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">City</label>
                                <input asp-for="OrderHeader.City" type="text" class="form-control" required>
                                <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Country</label>
                                <input asp-for="OrderHeader.Country" type="text" class="form-control" required>
                                <span asp-validation-for="OrderHeader.Country" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Postal Code</label>
                            <input asp-for="OrderHeader.PostalCode" type="text" class="form-control" required>
                            <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-primary">Order Summary</h5>
                        <ul class="list-group mb-3">
                            @foreach (var details in Model.Items)

                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <div>
                                        <h6 class="mb-1">@details.Product.Title by <small class="text-muted">@details.Product.Artist</small></h6>
                                        <small class="text-muted"><i class="bi bi-x"></i>@details.Count</small>
                                    </div>
                                    <span class="fw-bold">@((details.Price * details.Count).ToString("c"))</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <strong class="text-primary">Total:</strong>
                                <strong class="text-primary">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
                            </li>
                        </ul>
                        <div class="text-center">
                            <button type="submit" id="placeOrderBtn" class="btn btn-success w-100 py-2" disabled>Place Order</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center bg-light py-3">
                <small class="text-muted">Estimated Delivery: 3-5 Business Days</small>
            </div>
        </div>
    </div>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("checkoutForm");
        const button = document.getElementById("placeOrderBtn");

        function toggleButtonState() {
            if (form.checkValidity()) {
                button.removeAttribute("disabled");
            } else {
                button.setAttribute("disabled", "disabled");
            }
        }

        
        toggleButtonState();

       
        form.addEventListener("input", toggleButtonState);
    });
</script>